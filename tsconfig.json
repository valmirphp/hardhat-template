{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2020",
    "paths": {
      "@app/typechain": ["storage/typechain"],
      "@app/typechain/*": ["storage/typechain/*"],
      "@app/ignition": ["ignition/modules"],
      "@app/ignition/*": ["ignition/modules/*"]
    }
  },
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts", "./hardhat.utils.ts"],
  "include": ["src/**/*", "tasks/**/*", "ignition/**/*", "test/**/*", "hre/*", "deploy/**/*", "typechain/"]
}
